<h1>Listing Emergency Alerts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emergency_alerts.each do |emergency_alert| %>
      <tr>
        <td><%= emergency_alert.patient.first_name %></td>
        <td><%= emergency_alert.patient.last_name %></td>
        <td><%= link_to 'Show', emergency_alert %></td>
        <td><%= link_to 'Edit', edit_emergency_alert_path(emergency_alert) %></td>
        <td><%= link_to 'Destroy', emergency_alert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

