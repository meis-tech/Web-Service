<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
  <div id="grad" style="width:750px;display: block;margin-left: auto;margin-right: auto; border-radius: 15px;font-family:disco;padding: 50px;">
    <div style="margin-bottom: 30px; FONT-SIZE: 50px;color: white;margin-left: 50px;"> Listing Hosted Files</div>
    <table id="profile_table" style="width: 650px;border-radius:15px;border-radius:15px;background-color:white">
      <thead>
        <tr style="border-bottom:1px solid gray">
          <td style="color: #3A5CAC;font-family: disco;padding: 8px;font-size: 20px;border-right: 1px solid gray;text-align: center;"> id </td>
          <td style="color: #3A5CAC;font-family: disco;padding: 8px;font-size: 20px;border-right: 1px solid gray;text-align: center;"> name </td>
          <td style="color: #3A5CAC;font-family: disco;padding: 8px;font-size: 20px;border-right: 1px solid gray;text-align: center;"> version </td>
          <td style="color: #3A5CAC;font-family: disco;padding: 8px;font-size: 20px;border-right: 1px solid gray;text-align: center;"> phone type</td>
          <td style="color: #3A5CAC;font-family: disco;padding: 8px;font-size: 20px;text-align: center;border-right: 1px solid gray;"> being shown?</td>
          <td style="color: #3A5CAC;font-family: disco;padding: 8px;font-size: 20px;text-align: center;"> select</td>
        </tr>
      </thead>
      <tbody>
        <% @hosted_files.each do |hosted_file| %>
        <tr style="border-top:1px solid gray">
          <td style="color: #3A5CAC;font-family: disco;padding: 14px;border-right: 1px solid gray;border-bottom-left-radius: 10px;padding-left:18px;padding-right:18px"> <%= hosted_file.id %> </td>
          <td style="color: #3A5CAC;font-family: disco;padding: 10px;border-right: 1px solid gray;border-bottom-left-radius: 10px;"> <%= hosted_file.name%> </td>
          <td style="color: #3A5CAC;font-family: disco;padding: 10px;border-right: 1px solid gray;" > <%= hosted_file.version %> </td>
          <td style="color: #3A5CAC;font-family: disco;padding: 10px;border-right: 1px solid gray;" > <%= hosted_file.phone_type %></td>
          <td style="color: #3A5CAC;font-family: disco;padding: 10px;border-right: 1px solid gray;" > <%= hosted_file.shown %></td>
          <td style="color: #3A5CAC;font-family: disco;padding: 10px;border-bottom-right-radius:10px"> <%= link_to 'Show', hosted_file %><%= link_to 'Edit', edit_hosted_file_path(hosted_file) %> <%= link_to 'Destroy', hosted_file, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>


    <div style="margin-bottom: 20px;">
      <div>
      <%= link_to(new_hosted_file_path()) do %>
        <div>
          <button type="submit" style="margin-top:15px;border-radius: 10px;color: #3A5CAC;float: left;margin-right: 15px;" class="btn btn-default">add new file</button>
        </div>
      <% end %>
    </div>
  </div>
  </div>
</div>

<br>
